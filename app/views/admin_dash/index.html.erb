<h1>Admin Dashboard</h1>
<div class="row">
  <div class="col s4">
    <div class="card red">
      <h2><%= Distributor.all.count %></h2>
      <h3>Distributors</h3>
    </div>
  </div>
  <div class="col s4">
    <div class="card blue">
      <h2><%= Order.all.count %></h2>
      <h3>Orders Made</h3>
    </div>
  </div>
  <div class="col s4">
    <div class="card green">
      <h2><%= Transaction.all.count %></h2>
      <h3>Transactions Done</h3>
    </div>
  </div>
</div>
<button class="btn blue" onclick="add_dist()">Add Distributor</button>

<div id="distributor-form" style="display: none">
  <%= form_tag("/admin_dash/add_dist", method: "POST") do %>
  <%= label_tag("Distributor Name:") %>
  <%= text_field_tag(:dist_name) %>
  <%= label_tag("Distributor Email:") %>
  <%= text_field_tag(:email) %>
  <%= label_tag("Distributor Password:") %>
  <%= text_field_tag(:password) %>
  <%= label_tag("Distributor Address:") %>
  <%= text_field_tag(:dist_contact) %>
  <%= label_tag("Distributor Float:") %>
  <%= text_field_tag(:dist_float) %>
  <%= submit_tag("Add Distributor") %>
  <% end %>
</div>

<button class="btn blue" onclick="add_product()">Add Product</button>
<div id="products-form" style="display: none">
  <%= form_tag("/products", method: "POST") do %>
    <%= label_tag("Product Name:") %>
    <%= text_field_tag(:name) %>
    <%= label_tag("Product Price:") %>
    <%= text_field_tag(:cost) %>
    <%= submit_tag("Add Product") %>
  <% end %>
</div>

<div class="row">
  <div class="col s6">
    <h2>Distributors</h2>
    <table class="striped">
      <thead>
        <th>Distributor Name</th>
        <th>Distributor Email</th>
        <th>Distributor Contact</th>
        <th>Distributor FLoat</th>
      </thead>
      <tbody>
        <% @distributors.each do |d| %>
          <tr>
            <td><%= d.dist_name %></td>
            <td><%= d.email %></td>
            <td><%= d.dist_contact %></td>
            <td><%= d.dist_float %></td>
            <td><%= link_to "Remove", "/admin_dash/remove_dist/#{d.id}", class: "btn", method: "DELETE", data: {confirm: "Do you want to remove #{d.dist_name} from your distributors?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
  <div class="col s6">
    <h2>Orders</h2>
    <table class="striped">
      <thead>
        <th>Order REF</th>
        <th>Distributor</th>
        <th>Quantity</th>
        <th>Pick-Up Time</th>
        <th>Order Cost</th>
        <th>Amount Paid</th>
        <th>Balance</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.order_id %></td>
            <td><%= order.distributor.dist_name %></td>
            <td><%= order.quantity %></td>
            <td><%= order.pick_up %></td>
            <td><%= order.order_cost %></td>
            <td><%= order.transactions.count %></td>
            <% if (order.cost - order.transactions.sum(:amount)) == 0 %>
              <td> <button class="btn green" name="button">Paid</button> </td>
              <td> <button class="btn blue" name="button">Dispatch</button> </td>
            <% else %>
                <td> <button class="btn red" name="button"><%=  order.cost - order.transactions.sum(:amount) %></button> </td>
                <td> <button class="btn blue" disabled>Dispatch</button> </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

<div class="row">
  <div class="col s6">
    <h2>Payments</h2>
    <table class="striped">
      <thead>
        <th>Transaction REF</th>
        <th>Order REF</th>
        <th>Distributor</th>
        <th>Amount</th>
        <th>Payment Channel</th>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.transaction_id %></td>
            <td><%= transaction.order_id %></td>
            <td><%= Distributor.find(transaction.distributor_id).dist_name %></td>
            <td><%= transaction.amount %></td>
            <td><%= PaymentChannel.find(transaction.payment_channel_id).channel %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
  <div class="col s6">
    <h2>Products</h2>
    <table class="striped">
      <thead>
        <th>Product Name</th>
        <th>Product Price</th>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.cost %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
